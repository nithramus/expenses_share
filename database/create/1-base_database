USE expenses_share;
CREATE TABLE expenses (
    id INT AUTO_INCREMENT PRIMARY KEY NOT NULL,
    spender_id INT,
    group_id INT,
    amount DOUBLE,
    about TEXT,
    created_at TIMESTAMP
);
CREATE TABLE users(
    id INT AUTO_INCREMENT PRIMARY KEY NOT NULL,
    username VARCHAR(255),
    password TEXT
);
CREATE TABLE expense_comment (
    id INT AUTO_INCREMENT PRIMARY KEY NOT NULL,
    expense_id INT,
    user_id INT,
    content TEXT,
    created_at TIMESTAMP
);
CREATE TABLE groups_users (
    id INT AUTO_INCREMENT PRIMARY KEY NOT NULL,
    user_id INT,
    group_id INT
);
CREATE TABLE groups (
    id INT AUTO_INCREMENT PRIMARY KEY NOT NULL,
    size INT
);